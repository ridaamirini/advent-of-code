#!/usr/bin/env php
<?php

require_once __DIR__ . '/../lib/php/cli.php';
require_once __DIR__ . '/../lib/php/utils.php';
require_once __DIR__ . '/../lib/php/runner.php';

foreach (glob(__DIR__ . '/../**/**/code.*') as $codeFile) {
    $code = runWithExitCode($codeFile);

    if ($code !== CLI_SUCCESS) {
        exit(CLI_FAILURE);
    }
}

newLine();
write('COMPLETED!');
newLine();

exit(CLI_SUCCESS);
